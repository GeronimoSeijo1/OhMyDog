<div class="bg-body-tertiary"> 
  <div class="container">
    <div class="d-flex justify-content-center align-items-center mt-4">
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Datos del nuevo cliente</h4>
        <%= form_for(@user, url: registers_path) do |f| %>
          <div class="row g-3">
            <div class="col-sm-6">
               <%= f.label :name, class:"form-label" %>
               <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :surname, class:"form-label" %>
               <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>
              
            <div class="col-12">
               <%= f.label :email, class:"form-label" %>
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>
            
            <div class="col-12">
              <%= f.label :phoneNum, class:"form-label" %>
              <%= f.telephone_field :phoneNum, autofocus: true, autocomplete: "phoneNumber", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>

            <div class="col-12">
              <%= f.label :dni, class:"form-label" %>
              <%= f.text_field :dni, autofocus: true, autocomplete: "dni", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>
          </div>

          <% if flash[:alert] %>
            <div class="alert alert-danger my-2 p-1 text-center">
              <%= flash[:alert] %>
            </div>
          <% end %>   

          <hr class="my-4">
          <%= f.submit "Registrar", class:"w-100 btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
