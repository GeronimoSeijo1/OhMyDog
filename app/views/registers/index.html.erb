<div class="container-fluid py-3">
    <h2>Clientes</h2>
    <hr>
    <%= link_to "Agregar cliente", new_register_path, class:"btn btn-secondary px-3 mb-2"%>



    <% if flash[:notice].present? %>
        <div class="alert alert-success">  
            <%= flash[:notice] %>
        </div>
    <% end %>

    <%= form_tag(registers_path, method: :get, class: "form-inline mb-3") do %>
         <div class="input-group w-25">
        <%= text_field_tag :dni, params[:dni], class: "form-control w-25", placeholder: "Buscar por DNI"%>
        <%= button_tag(type: 'submit', class: 'btn btn-outline-success') do %>
          <i class="bi bi-search"></i>
        <% end %>
        <!-- BotÃ³n para restaurar la tabla completa -->
        <%= link_to registers_path, class:"btn btn-outline-secondary" do%>
          <i class="bi bi-arrow-counterclockwise"></i>
        <% end %>
      </div>
    <% end %>
   
    

    <table class="table table-striped my-3">
    <thead class="thead-dark">
        <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>DNI</th>
        <th>Telefono</th>
        <th>Perros</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
            <td><%= user.email %></td>
            <td><%= user.dni %></td>
            <td><%= user.phoneNum %></td>
            <td><%= link_to "Ver perros", user_dogs_user_path(user), class: "btn btn-primary btn-sm" %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>


