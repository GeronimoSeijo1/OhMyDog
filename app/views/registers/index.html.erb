<style>
    .max-width-500 {
         max-width: 500px;
        width: 100%;
        margin-left: auto;
         margin-right: auto;
    }
</style>

<div class="container-fluid py-3">
    <h2>Clientes</h2>
    <hr>
    <%= link_to "Agregar cliente", new_register_path, class:"btn btn-secondary px-3 mb-2"%>



    <% if flash[:notice].present? %>
        <div class="alert alert-success">  
        <%= flash[:notice] %>
        </div>
    <% end %>

    <table class="table table-striped my-5">
    <thead class="thead-dark">
        <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>DNI</th>
        <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
            <td><%= user.email %></td>
            <td><%= user.dni %></td>
            <td><%= user.phoneNum %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>


