
<div class="container">
  <div class="d-flex justify-content-center align-items-center mt-1">
    <div class="col-md-7 col-lg-8">
      <h4 class="mb-3">Datos del perro</h4>
      <%= form_with(model: missing_post) do |f| %>
        <div class="row g-3">
          <div class="col-sm-6">
              <%= f.label :Nombre, class:"form-label" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder: "", required: "required"%>
          </div>

          <div class="col-sm-6">
              <%= f.label :Raza, class:"form-label" %>
              <%= f.text_field :breed, autofocus: true, autocomplete: "breed", class:"form-control", placeholder:"", required: "required"%>
          </div>
            
          <div class="col-4">
              <%= f.label :Tama침o, class:"form-label" %>
              <%= f.select :size, ['Muy chico','Chico','Mediano','Grande','Muy grande'], { prompt: 'Selecciona el tama침o'}, { class: 'form-select', required: 'required', placeholder:""} %>
          </div>
          
          <div class="col-4">
            <%= f.label :Sexo, class: "form-label" %>
            <%= f.select :gender, ['Hembra', 'Macho'], { prompt: 'Selecciona el sexo' }, { class: 'form-select', required: 'required', placeholder:""} %>
          </div>

          <div class="col-4">
            <%= f.label :Edad, class: "form-label" %>
            <%= f.number_field :age, min:0, class:"form-control", required: 'required', placeholder: "Solo a침os" %>
          </div>

          <div class="col-12">
            <%= f.label :'Zona en la que se perdi칩', class:"form-label" %>
            <%= f.text_area :zone, autofocus: true, autocomplete: "zone", class:"form-control", placeholder:"", required: "required"  %>
          </div>

          <div class="col-12">
            <%= f.label :'Otros datos para facilitar la busqueda', class:"form-label" %>
            <%= f.text_area :description, autofocus: true, autocomplete: "description", class:"form-control", placeholder: "", required: "required"%>
          </div>

        </div>

        <% if flash[:alert] %>
          <div class="alert alert-danger my-2 p-1 text-center">
            <%= flash[:alert] %>
          </div>
        <% end %>   

        <% if missing_post.errors.any? %>
          <div class="alert alert-danger my-2 p-1 text-center">
            <ul>
              <% missing_post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <hr class="mt-4">
        <%= f.submit "Publicar perro perdido", class:"w-100 btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
