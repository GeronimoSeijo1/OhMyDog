<div class=""> 
  <div class="container">
    <div class="d-flex justify-content-center align-items-center mt-4">
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Datos del paseador</h4>
        <%= form_with(model: walker) do |f| %>
          <div class="row g-3">
            <div class="col-sm-6">
               <%= f.label :Nombre, class:"form-label" %>
               <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :Apellido, class:"form-label" %>
               <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class:"form-control", placeholder:"", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :Zona, class:"form-label" %>
               <%= f.text_field :zone, autofocus: true, autocomplete: "zone", class:"form-control", placeholder:"", required: "required"%>
            </div>

            <div class="col-sm-3">
              <%= f.label :Desde, class: "form-label" %>
              <%= f.time_field :start, class: "form-control", autocomplete: "start", required: "required" %>
            </div>

            <div class="col-sm-3">
              <%= f.label :hasta, class: "form-label" %>
              <%= f.time_field :end, class: "form-control", autocomplete: "end", required: "required" %>
            </div>

            <div class="row g-3">
              <div class="col-sm-6">
                <%= f.label :Correo, class:"form-label" %>
                <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"", required: "required"%>
              </div>
              <div class="col-sm-6">
                <%= f.label :TelÃ©fono, class:"form-label" %>
                <%= f.text_field :phoneNum, autofocus: true, autocomplete: "phoneNum", class:"form-control", placeholder:"", required: "required"%>
              </div>
            </div>

          </div>

          <% if flash[:alert] %>
            <div class="alert alert-danger my-2 p-1 text-center">
              <%= flash[:alert] %>
            </div>
          <% end %>   

          <% if walker.errors.any? %>
            <div class="alert alert-danger my-2 p-1 text-center">
              <ul>
                <% walker.errors.each do |error| %>
                  <li><%= error.message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <hr class="mt-4">
          <%= f.submit "Agregar", class:"w-100 btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
