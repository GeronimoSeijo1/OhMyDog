<div class="container-fluid mt-4 px-2">
  <h2>Cancelar turno</h2>
  <hr>

  <div class="modal modal-sheet position-static d-block p-4 py-md-2" tabindex="-1" role="dialog" id="modalSheet">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
        <%= render "form_confirm_cancel", appointment: @appointment, from: @source %>


        <% if params[:source] == "cancel_from_confirmed" %>
          <%= link_to "Volver atras", confirmed_path, class:"btn btn-lg btn-secondary" %>
        <% elsif params[:source] == "cancel_from_request" %>
          <%= link_to "Volver atras", requests_path, class:"btn btn-lg btn-secondary" %>
        <% end %>
        </div>   
      </div>
    </div>
  </div>
</div>

