                        <%= link_to "Cuidadores", index_user_caregiver_path, class:"nav-link fw-bold py-1 px-0"  %>
                        <%= link_to "Paseadores", index_user_walker_path, class:"nav-link fw-bold py-1 px-0"  %>
                        <%= link_to "Donaciones", donations_path, class:"nav-link fw-bold py-1 px-0"  %>

                    </nav>
                </div>
            </header>

            <main class="px-3">
               <%= yield %>
            </main>

            <footer class="mt-auto text-white-50">
            </footer>
        </div>

    </body>
</html>