    <% if current_user %>
        <h1>Bienvenido <%= current_user.surname%> <%=current_user.name%></h1>
    <% end %>

    <% if flash[:alert].present? %>
        <div class="alert alert-danger w-50 mt-4">
            <%= flash[:alert] %>
        </div>
    <% elsif flash[:notice].present? %>
        <div class="alert alert-success w-50 mt-4">
            <%= flash[:notice] %>
        </div>
    <% end %>

    <% flash.discard %>


