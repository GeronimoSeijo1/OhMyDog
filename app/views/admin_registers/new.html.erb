<div class="bg-body-tertiary"> 
  <div class="container">
    <div class="d-flex justify-content-center align-items-center mt-4">
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Datos de nuevo administrador</h4>
        <%= form_for(@user, url: admin_registers_path) do |f| %>
          <div class="row g-3">
            <div class="col-sm-6">
               <%= f.label :Nombre, class:"form-label" %>
               <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :Apellido, class:"form-label" %>
               <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>
              
            <div class="col-12">
               <%= f.label :'Correo electronico', class:"form-label" %>
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>
            
            <div class="col-12">
              <%= f.label :Telefono, class:"form-label" %>
              <%= f.telephone_field :phoneNum, autofocus: true, autocomplete: "phoneNumber", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>

            <div class="col-12">
              <%= f.label :Documento, class:"form-label" %>
              <%= f.text_field :dni, autofocus: true, autocomplete: "dni", class:"form-control", placeholder:"", value:"", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :Contraseña, class:"form-label" %>
               <%= f.password_field :password, autocomplete: "new-password", class:"form-control", required: "required"%>
            </div>

            <div class="col-sm-6">
               <%= f.label :'Confirmar contraseña', class:"form-label" %>
               <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", required: "required"%>
            </div>
          </div>

          <% if flash[:alert].present? %>
              <div class="alert alert-danger mt-4">  
                <%= flash[:alert] %>
              </div>
            <% elsif flash[:notice].present? %>
              <div class="alert alert-success">  
                <%= flash[:notice] %>
              </div>
            <% end %> 

          <hr class="my-3">
            <div class="row g-3">
            <div class="col-sm-6">
              <%= f.submit "Registrar", class:"w-100 btn btn-primary" %>
            </div>
            <div class="col-sm-6">
              <%= link_to "Volver atras", admin_registers_path, class: "btn btn-outline-secondary w-100 "%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
